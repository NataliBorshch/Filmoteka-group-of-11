
{{#each this}}

<li class="movie-card">
  <img class="movie-card__poster film-image" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{original_title}}" id="{{id}}"
   data-source="https://image.tmdb.org/t/p/w500"{{backdrop_path}} />
  <h3 class="movie-card__title">{{title}}</h3>
  <ul class="movie-card__info">
    <li class="movie-card__genre">
        <p>Drama, Action</p>
    </li>
    <li class="movie-card__year"><p>{{release_date}}</p></li>
    <li class="movie-card__rate vote-accent">
        {{id}}
    </li>
  </ul>
</li>

{{/each}}